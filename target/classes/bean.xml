<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- A simple bean definition -->
    <bean id = "actorId" class = "com.stackroute.domain.Actor">
        <property name="name" value="Salman Khan"></property>
        <property name="gender" value="Male"></property>
        <property name="age" value="55"></property>
    </bean>
         <!--collaborators and configuration for this bean go here-->


    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Sallu"></constructor-arg>
        <constructor-arg index="1" value="Male"></constructor-arg>
        <constructor-arg index="2" value="34"></constructor-arg>
    </bean>
    <bean id="cons2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Ranveer"></constructor-arg>
        <constructor-arg name="gender" value="Male"></constructor-arg>
        <constructor-arg name="age" value="45"></constructor-arg>
    </bean>
    <bean id="cons3" class="com.stackroute.domain.Actor">
        <constructor-arg type="java.lang.String" value="Preety"></constructor-arg>
        <constructor-arg type="java.lang.String" value="Female"></constructor-arg>
        <constructor-arg type="int" value="22"></constructor-arg>
    </bean>
    <bean id="mo" class="com.stackroute.domain.Movie">
        <property name="actor" ref="actorId"></property>
    </bean>
    <bean name="cosmo,cosmo2" autowire="byName" class="com.stackroute.domain.Movie">

    </bean>
    <bean name="beanLifecycle" class="com.stackroute.domain.BeanLifeCycleDemoBean" init-method="customInIt" destroy-method="customDestroy">

    </bean>


</beans>